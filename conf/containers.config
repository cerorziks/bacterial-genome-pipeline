/*
========================================================================================
    Container Definitions
========================================================================================
*/

process {
    
    withName: 'FASTQC_RAW|FASTQC_TRIMMED' {
        container = 'biocontainers/fastqc:v0.11.9_cv8'
    }
    
    withName: FASTP {
        container = 'biocontainers/fastp:v0.23.4_cv1'
    }
    
    withName: SPADES {
        container = 'staphb/spades:3.15.5'
    }
    
    withName: QUAST {
        container = 'staphb/quast:5.2.0'
    }
    
    withName: PROKKA {
        container = 'staphb/prokka:1.14.6'
    }
    
    withName: AMRFINDERPLUS {
        container = 'ncbi/amr:latest'
    }
    
    withName: VFDB_BLAST {
        container = 'ncbi/blast:latest'
    }
    
    withName: MLST {
        container = 'staphb/mlst:2.23.0'
    }
    
    withName: SNIPPY {
        container = 'staphb/snippy:4.6.0'
    }
    
    withName: SNIPPY_CORE {
        container = 'staphb/snippy:4.6.0'
    }
    
    withName: IQTREE {
        container = 'staphb/iqtree:2.2.2.6'
    }
    
    withName: SNP_DISTS {
        container = 'staphb/snp-dists:0.8.2'
    }
    
    withName: MULTIQC {
        container = 'ewels/multiqc:1.19'
    }
}
